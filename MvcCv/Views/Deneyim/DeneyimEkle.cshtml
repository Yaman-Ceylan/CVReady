@model MvcCv.Models.Entity.tbldeneyimlerim
@{
    ViewBag.Title = "DeneyimEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h4>Deneyim Ekle</h4>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <form method="post">
                                    @Html.Label("Pozisyon")
                                    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control", @placeholder = "Pozisyonu yazınız", @maxlength = "100" })
                                    @Html.ValidationMessageFor(x => x.Baslik, "", new { @style = "color:red" })
                                    <br />
                                    @Html.Label("Şirket/Firma")
                                    @Html.TextBoxFor(x => x.AltBaslik, new { @class = "form-control", @placeholder = "İş yeri adını yazınız", @maxlength = "100" })
                                    @Html.ValidationMessageFor(x => x.AltBaslik, "", new { @style = "color:red" })
                                    <br />
                                    @Html.Label("Tarih")
                                    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control", @placeholder = "Tarih aralığını giriniz", @maxlength = "100" })
                                    @Html.ValidationMessageFor(x => x.Tarih, "", new { @style = "color:red" })
                                    <br />
                                    @Html.Label("Açıklama")
                                    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control", @placeholder = "Açıklama...", @maxlength = "1000" })
                                    <br />
                                    @Html.HiddenFor(x => x.kullaniciID)
                                    
                                    <div class="d-flex justify-content-end mt-3">
                                        <button class="btn btn-success">Kaydet</button>
                                    </div>                                
                                </form>                             
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
    </div>
</body>
</html>