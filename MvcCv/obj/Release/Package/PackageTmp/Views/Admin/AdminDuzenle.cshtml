@model MvcCv.Models.Entity.tbladmin
@{
    ViewBag.Title = "AdminDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h4>Kullanıcı Adı ve Şifre Güncelleme</h4>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <form method="post">
                                    @Html.Label("Kullanıcı ID")
                                    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
                                    <br />
                                    @Html.Label("Kullanıcı Adı")
                                    @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control", @placeholder = "Kullanıcı Adını giriniz", @maxlength = "20" })
                                    @Html.ValidationMessageFor(x => x.KullaniciAdi, "", new { @style = "color:red" })
                                    <br />
                                    @Html.Label("Şifre")
                                    <div class="input-group">
                                        @Html.PasswordFor(x => x.Sifre, new { @class = "form-control", @id = "password", @placeholder = "Şifreyi giriniz", @maxlength = "20" })
                                        @Html.ValidationMessageFor(x => x.Sifre, "", new { @style = "color:red" })
                                        <div class="input-group-append">
                                            <span class="input-group-text" id="togglePassword" style="cursor: pointer;">
                                                <i class="fas fa-eye" id="eyeIcon"></i>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-end mt-3">
                                        <button class="btn btn-success">Güncelle</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('togglePassword').addEventListener('click', function () {
                var passwordField = document.getElementById('password');
                var eyeIcon = document.getElementById('eyeIcon');

                if (passwordField.type === 'password') {
                    passwordField.type = 'text'; // Şifreyi göster
                    eyeIcon.classList.remove('fa-eye');
                    eyeIcon.classList.add('fa-eye-slash'); // Gösterildiğinde ikon değişsin
                } else {
                    passwordField.type = 'password'; // Şifreyi gizle
                    eyeIcon.classList.remove('fa-eye-slash');
                    eyeIcon.classList.add('fa-eye'); // Gizlendiğinde ikon geri değişsin
                }
            });
        });
    </script>
</body>
</html>
