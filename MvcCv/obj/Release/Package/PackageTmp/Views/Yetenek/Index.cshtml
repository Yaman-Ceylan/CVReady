@using MvcCv.Models.Entity
@model List<tblyeteneklerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string dereceRenk = string.Empty, oranRenk = string.Empty; }

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h4>Yetenekler</h4>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <a href="@Url.Action("YeniYetenek", "Yetenek", new { kullaniciAdi = Session["KullaniciAdi"] })" class="btn btn-primary">Yeni Yetenek Ekle</a>
                                <br /><br />
                                <table class="table table-borderless">                                    
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if (item.Oran >= 0 && item.Oran <= 50)
                                            {
                                                dereceRenk = "progress-bar bg-danger";
                                                oranRenk = "badge bg-danger";
                                            }
                                            if (item.Oran >= 51 && item.Oran <= 70)
                                            {
                                                dereceRenk = "progress-bar bg-warning";
                                                oranRenk = "badge bg-warning";
                                            }
                                            if (item.Oran >= 71 && item.Oran <= 84)
                                            {
                                                dereceRenk = "progress-bar bg-primary";
                                                oranRenk = "badge bg-primary";
                                            }
                                            if (item.Oran >= 85 && item.Oran <= 100)
                                            {
                                                dereceRenk = "progress-bar bg-success";
                                                oranRenk = "badge bg-success";
                                            }
                                            <tr>
                                                <td width="300px">@item.Yetenek</td>
                                                <td width="150px">
                                                    <div class="progress progress-xs">
                                                        <div class="@dereceRenk" style="width: @item.Oran%"></div>
                                                    </div>
                                                </td>
                                                <td width="100px" align="center"><span class="@oranRenk">%@item.Oran</span></td>
                                                <td align="center">
                                                    <a class="btn btn-info btn-sm" href="@Url.Action("YetenekDuzenle", "Yetenek", new { kullaniciAdi = Session["KullaniciAdi"], id = item.ID })">
                                                        <i class="fas fa-pencil-alt">
                                                        </i>
                                                        Düzenle
                                                    </a>
                                                    <a class="btn btn-danger btn-sm" href="/Yetenek/YetenekSil/@item.ID" onclick="confirmAction(event)">
                                                        <i class="fas fa-trash">
                                                        </i>
                                                        Sil
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>