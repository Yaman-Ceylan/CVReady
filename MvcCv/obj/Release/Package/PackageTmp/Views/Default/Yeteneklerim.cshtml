@using MvcCv.Models.Entity
@model List<tblyeteneklerim>

<div class="resume-section-content">
    <h2 class="mb-5">Yeteneklerim</h2>
    <div class="subheading mb-3">Programming Languages & Tools</div>
    <ul class="list-inline dev-icons">
        <li class="list-inline-item"><i class="fab fa-microsoft"></i></li>
        <li class="list-inline-item"><i class="fas fa-database"></i></li>
        <li class="list-inline-item"><i class="fab fa-html5"></i></li>
        <li class="list-inline-item"><i class="fab fa-css3-alt"></i></li>
        <li class="list-inline-item"><i class="fab fa-js"></i></li>
        <li class="list-inline-item"><i class="fab fa-php"></i></li>
        <li class="list-inline-item"><i class="fab fa-linux"></i></li>
        <li class="list-inline-item"><i class="fab fa-java"></i></li>
        <li class="list-inline-item"><i class="fas fa-stream"></i></li>
        <li class="list-inline-item"><i class="fab fa-aws"></i></li>
        <li class="list-inline-item"><i class="fab fa-github"></i></li>
        <li class="list-inline-item"><i class="fab fa-python"></i></li>
        <li class="list-inline-item"><i class="fab fa-docker"></i></li>
        <li class="list-inline-item"><i class="fas fa-code"></i></li>
        <li class="list-inline-item"><i class="fab fa-apple"></i></li>
    </ul>
    <div class="subheading mb-3">Becerilerim</div>
    <ul class="fa-ul mb-0">
        @foreach (var x in Model)
        {
            <li style="display: flex; align-items: center;">
                <span class="fa-li" style="margin-right: 10px;"><i class="fas fa-check"></i></span>
                <span style="width: 320px; margin-right: 10px;">@x.Yetenek</span>
                <div class="progress progress-xs" style="width:150px; height:10px;">
                    <div class="progress-bar bg-primary" style="width: @x.Oran%;"></div>
                </div>
            </li>
        }
    </ul>
</div>

